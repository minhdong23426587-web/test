# Core application
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXTAUTH_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/app_db
SHADOW_DATABASE_URL=postgresql://user:password@localhost:5432/app_db_shadow

# Redis (sessions, rate limiting, WebSocket pub/sub)
REDIS_URL=redis://localhost:6379
REDIS_TLS=false

# Email provider for magic links
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=demo
SMTP_PASS=demo
SMTP_FROM="Security Team <security@example.com>"

# Security secrets (rotate frequently)
INTERNAL_HMAC_SECRET=replace-with-64-byte-hex
SESSION_SECRET=replace-with-64-byte-hex
ADMIN_SESSION_SECRET=replace-with-64-byte-hex
REFRESH_TOKEN_PEPPER=replace-with-32-byte-hex
WEBAUTHN_RP_ID=localhost
WEBAUTHN_ORIGIN=http://localhost:3000

# Admin configuration
ADMIN_EMAIL=admin@example.com
ADMIN_TOTP_SECRET=JBSWY3DPEHPK3PXP
ADMIN_ALLOWLIST_IPS=127.0.0.1/32

# API keys & rate limiting
RATE_LIMIT_POLICY=default
API_KEY_HASH_ROUNDS=12
TOKEN_BUCKET_CAPACITY=100
TOKEN_BUCKET_REFILL_RATE=20

# Observability
SENTRY_DSN=
PROMETHEUS_ENDPOINT=http://localhost:9464/metrics
AUDIT_LOG_CHANNEL=security

# Bot defense / captcha
CAPTCHA_SITE_KEY=
CAPTCHA_SECRET=
IP_REPUTATION_API_KEY=

# WebSocket gateway
WS_SERVER_URL=ws://localhost:4000
WS_JWT_SECRET=replace-with-64-byte-hex

# Third-party integrations
SECRET_SCANNER_WEBHOOK=
DEPENDENCY_SCAN_WEBHOOK=
